<Window
	x:Class="Medical_System.GraphWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Graph"
	SizeToContent="WidthAndHeight"
	ResizeMode="NoResize"
>
    <Grid
		x:Name="Grid_main"
		Width="500"
		Height="500"
	>
        <Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="10*"
			/>
			<ColumnDefinition
				Width="90*"
			/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="90*"
			/>
			<RowDefinition
				Height="10*"
			/>
		</Grid.RowDefinitions>
		<Canvas
			x:Name="Canvas_y_axis"
			Background="Gray"
		/>
		<Rectangle
			Fill="Gray"
			Grid.Row="2"
		/>
		<Canvas
			x:Name="Canvas_x_axis"
			Background="Gray"
			Grid.Column="1"
			Grid.Row="2"
		/>
		<Canvas
			x:Name="Canvas_graph"
			Grid.Column="1"
			ClipToBounds="True"
			Background="White"
		/>
	</Grid>
</Window>
