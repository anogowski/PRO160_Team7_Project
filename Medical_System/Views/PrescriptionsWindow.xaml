<Window x:Class="Medical_System.Views.PrescriptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prescriptions" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10 2"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Label Name="PrescriptionLabel"
               Margin="10 4 10 0"
               Content="Prescriptions:"/>
        <ComboBox Name="PrescriptionBox"
                  Margin="10 2"/>

        <UniformGrid>
            <Button Name="ApplyButton"
                    Content="Add"
                    Margin="30 20 5 20"
                    Click="ApplyButton_Click"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Margin="5 20 30 20"
                    Click="CancelButton_Click"/>
        </UniformGrid>
    </StackPanel>
</Window>
