<Window x:Class="Medical_System.Views.PatientInfoEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PatientInfoEdit" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10 2"/>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <TextBox Name="FirstNameBox"
                 Text="First Name"
                 Margin="10 4 10 2"/>
        <TextBox Name="LastNameBox"
                 Text="Last Name"/>
        <TextBox Name="GenderBox"
                 Text="Gender"/>
        <TextBox Name="HeightBox"
                 Text="Height"/>
        <TextBox Name="AddressBox"
                 Text="Address"/>
        <TextBox Name="PhoneNumberBox"
                 Text="PhoneNumber"/>

        <UniformGrid>
            <Button Name="ApplyButton"
                    Content="Apply"
                    Margin="30 20 5 20"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Margin="5 20 30 20"/>
        </UniformGrid>
    </StackPanel>
</Window>
