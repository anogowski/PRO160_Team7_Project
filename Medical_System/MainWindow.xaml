<Window x:Class="Medical_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MaxHeight="500" MaxWidth="800" MinHeight="500" MinWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,100,0,0" FontSize="50"></Label>
        <Button Name="adminBtn" Click="adminBtn_Click_1" Content="Admin" Width="100" Height="50" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"></Button>
        <Button Name="doctorBtn" Click="doctorBtn_Click_1" Content="Doctor" Width="100" Height="50" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Grid.Column="1"></Button>
        <Button Name="exitBtn" Click="exitBtn_Click_1" Content="Exit" Width="100" Height="50" FontSize="30" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,120,0,0"></Button>
    </Grid>
</Window>
